<!DOCTYPE html>
<html lang="en">
  <%- include("partials/head") %>
  <body>
    <%- include("partials/nav") %>
    <%- include("partials/header") %>

    <div class="container text-center my-5" style="max-width: 600px;">
      <h1 class="display-4">ChordExplorer</h1>
      <h4 class="text-muted">Admin Page</h4>
    </div>

    <div class="container my-5" style="padding: 20px;">
      <h1 class="mb-4">Admin Dashboard</h1>

      <% if (users && users.length > 0) { %>
        <form action="/api/users/admin/selected_action" method="POST" id="bulk_form">
        <table class="table table-striped table-bordered text-center">
            <tr>
              <th>Select</th>
              <th>ID</th>
              <th>Email</th>
              <th>Status</th>
              <th>Action</th>
            </tr>
            <% users.forEach(user => { %>
              <tr>
                <!--add ids to an array when selected from checkboxes-->
                <td><input type="checkbox" name="selected_users[]" value="<%= user.user_id %>"></td>
                <td><%= user.user_id %></td>
                <td><%= user.email %></td>
                <td><%= user.status || 'active' %></td>
                <td>
                  <a href="/api/users/admin/updateUser/<%= user.user_id%>" class="btn btn-secondary btn-sm">update</a>
                </td>
              </tr>
            <% }) %>
        </table>
        <div class="row-lg-4 text-center">
        <button type="submit" name="action" value="delete" class="btn btn-danger">Delete Selected Users</button>
        <button type="submit" name="action" value="suspend" class="btn btn-warning">Suspend Selected Users</button>
        <button type="submit" name="action" value="unsuspend" class="btn btn-success">Unsuspend Selected Users</button>
        </div>
        </form>
      <% } else { %>
        <p class="text-muted">No users found.</p>
      <% } %>
    </div>

    <%- include("partials/footer") %>
  </body>
</html>