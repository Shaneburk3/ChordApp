<!DOCTYPE html>
<html lang="en">
<%- include("partials/head") %>

  <body>
    <%- include("partials/nav") %>
      <div class="wrapper">
        <menu id="user" class="dynamicMenu">
          <%- include("partials/header") %>

          <div class="user_info">
            <div class="username">
              <p><strong>Hello, <%= user.first_name %> ! let's update your Information</strong> </p>
            </div>
          </div>

            <div class="user_profile row">
              <div class="card" style="width: 18rem;">
                <img class="card-img-top"
                  src="https://plus.unsplash.com/premium_vector-1731922571927-ac1d331d87e3?q=80&w=2360&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D"
                  alt="Card image cap">
                  <form action="/update" id="update_user_form" method="PUT">
                    <div class="card-body">
                      <div class="form-group">
                        <p><strong>Age:</strong></p>
                        <input type="number" name="user_age" id="user_age" placeholder="<%= user.user_age %>">
                      </div>
                      <div class="form-group">
                        <p><strong>Country: <%= user.user_country %></strong></p>
                        <input type="text" name="user_country" id="user_country" placeholder="<%= user.user_country %>">
                      </div>
                      <div class="form-group">
                        <p><strong>City: <%= user.user_city %> </strong></p>
                        <input type="text" name="user_city" id="user_city" placeholder="">
                      </div>
                      <br>
                      <a href="/update" id="update_btn" class="btn btn-secondary">Save changes</a>
                    </div>
                  </div>
                  <div class="card" style="width: 40rem;">
                    <div class="card-body">
                      <h5 class="card-title">Information</h5>
                      <h6 class="card-subtitle mb-2 text-muted">Card Contact</h6>
                      <p><strong>Email: </strong><input type="email" name="user_email" id="user_email" placeholder="<%= user.email %>"></p>
    
                      <div class="form-group">
                        <h5 class="card-title">User Bio</h5>
                        <textarea name="" id="user_bio" style="width: 30rem; height: 15rem;"></textarea>
                      </div>
                  </form>

                </div>
              </div>
            </div>
        </menu>
      </div>
      <%- include("partials/footer") %>
  </body>

</html>